{
  "name": "create-react-monorepo-boilerplate",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "abc-module/*",
    "app",
    "vite-app"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,ts,tsx,css,md}\"",
    "lint": "eslint . src config || true",
    "prettify": "prettier --write",
    "clean:node:modules": "rm -rf ./node_modules",
    "clean:lock": "rm -rf ./yarn.lock",
    "bootstrap": "lerna bootstrap",
    "clean": "yarn clean:node:modules && yarn clean:lock && yarn bootstrap",
    "packages:builder": "tsc -b ./{abc-module,packages}/*/tsconfig.json --watch",
    "webpack:server": "webpack serve --config ./internals/webpack/createAppDevServerConfig.js --node-env development",
    "webpack:build": "APP_NAME=app CLIENT=NAME webpack --config ./internals/webpack/createWebpackBuildConfig.js --node-env production",
    "app:start": "APP_NAME=app CLIENT=NAME yarn webpack:server",
    "start": "stmux -- [ [ \"yarn packages:builder\" : \"yarn modules:builder\" ] .. \"yarn app:start\" ]",
    "es": "vite build --config ./internals/build-packages/buildPackage.js",
    "app": "yarn workspace vite-app dev",
    "vite": "stmux -- [ \"yarn watch-packages\" .. \"yarn app\" ]",
    "try": "node ./internals/build-packages/index.js --workspace=abc-module"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@domain/pkg1": "1.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-default-from": "7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "7.12.13",
    "@babel/plugin-transform-react-constant-elements": "^7.13.10",
    "@babel/plugin-transform-react-inline-elements": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@vitejs/plugin-react-refresh": "^1.3.2",
    "babel-loader": "^8.2.2",
    "babel-preset-minify": "^0.5.1",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.0.0",
    "css-loader": "^5.1.2",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^6.1.1",
    "html-webpack-plugin": "^5.2.0",
    "lerna": "^3.20.2",
    "mini-css-extract-plugin": "^1.3.9",
    "prettier": "^2.2.1",
    "stmux": "^1.8.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.18",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.3",
    "vite": "^2.1.5",
    "webpack": "^5.24.3",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
