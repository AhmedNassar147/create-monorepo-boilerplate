{
  "name": "create-react-monorepo-boilerplate",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app",
    "packages/*",
    "some-module/*"
  ],
  "scripts": {
    "clean": "rm -rf ./node_modules",
    "clean-locks": "rm -rf ./yarn.lock",
    "bootstrap": "lerna bootstrap",
    "reset": "yarn clean && yarn clean-locks && yarn bootstrap",
    "prettify": "prettier --write",
    "generate": "plop --plopfile ./internals/generators/index.js",
    "generate-app-routes": "plop --plopfile ./internals/generators/build-app-routes/index.js",
    "ts-check-packages": "lerna run --parallel ts:checker:declaration --",
    "build-packages": "lerna run --parallel prepare --",
    "make:install": "yarn ts-check-packages && yarn build-packages",
    "// postinstall": "if [[ ${SKIP_POST_INSTALL} == \"true\" ]]; then echo 'skipped make:install.'; else yarn make:install; fi",
    "webpack:dev": "webpack serve --config ./internals/webpack/createAppDevServerConfig.js --node-env=development --",
    "start:js": "yarn webpack:dev",
    "start": "stmux -- [ [ -s 1/3 \"yarn ts-check-packages --watch\" .. \"yarn build-packages --watch\" ] : \"yarn start:js\" ]",
    "webpack-build": "webpack --config ./internals/webpack/createWebpackBuildConfig.js --node-env production -- --appName=app",
    "format": "prettier --write \"**/*.{js,ts,tsx,css,json,md}\"",
    "lint": "eslint . src config || true"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@domain/base-app-wrapper": "1.0.0",
    "@domain/base-page": "1.0.0",
    "@domain/lorem-ipsum": "1.0.0",
    "@domain/lorem-ipsum-page": "1.0.0",
    "@domain/lorem-ipsum-vvvv": "1.0.0",
    "@domain/lorem-ipsum-xx": "1.0.0",
    "@domain/react-lazy": "1.0.0",
    "@domain/routes": "1.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-default-from": "7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "7.12.13",
    "@babel/plugin-transform-react-constant-elements": "^7.13.10",
    "@babel/plugin-transform-react-inline-elements": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@domain/types": "1.0.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-loader": "^8.2.2",
    "babel-preset-minify": "^0.5.1",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "chokidar": "^3.5.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.0.0",
    "css-loader": "^5.1.2",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.1",
    "html-webpack-plugin": "^5.2.0",
    "lerna": "^3.20.2",
    "mini-css-extract-plugin": "^1.3.9",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "stmux": "^1.8.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">= 15.8.0",
    "yarn": ">= 1.22.10",
    "npm": ">= 7.5.1"
  }
}
