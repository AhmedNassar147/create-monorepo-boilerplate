{
  "name": "@domain/react-lazy",
  "version": "1.0.0",
  "private": true,
  "description": "A wrapper around `React.lazy` to create lazy loaded components.",
  "author": "ahmed nassar",
  "license": "ISC",
  "sideEffects": false,
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/types",
  "files": [
    "dist/esm",
    "dist/types",
    "dist/cjs"
  ],
  "scripts": {
    "ts:checker:declaration": "tsc -b .",
    "ts:checker:declaration:watch": "yarn ts:checker:declaration --watch",
    "prepare": "node ../../internals/buildPackage/index.js --packageName=@domain/react-lazy",
    "prepare:watch": "yarn prepare --watch"
  },
  "peerDependencies": {
    "@types/react": "^17.x.x",
    "react": "^17.x.x"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.12.0"
  }
}
